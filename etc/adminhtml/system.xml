<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="dev">
            <group id="debug">
                <field id="bettertemplatehints_visibility" translate="label" type="select" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Only show BetterTemplateHints on key press</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment>
                        <![CDATA[
                            If enabled, hold <kbd>Alt</kbd>, <kbd>Shift</kbd>, <kbd>Cmd</kbd> or <kbd>Ctrl</kbd> to show
                            BetterTemplateHints. If disabled, BetterTemplateHints are always visible.
                        ]]>
                    </comment>
                </field>
            </group>
        </section>
    </system>
</config>
